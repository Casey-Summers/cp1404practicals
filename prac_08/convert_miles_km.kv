BoxLayout
    orientation: 'vertical'
    BoxLayout
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            multiline: False
            on_text: app.convert_miles_to_km(input_miles.text)
        BoxLayout
            orientation: 'vertical'
            size_hint_max_x: 200
            Button
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)
